!!! 5
%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }

    %title= content_for?(:title) ? yield(:title) : current_realestate || 'REM -- Realestate Manager'

    = stylesheet_link_tag 'application'
    = javascript_include_tag 'vendor/modernizr'
    = csrf_meta_tags

  %body
    = render 'shared/header' if @realestate

    .row
      .large-12.columns
        = render 'shared/messages'
    .row
      .large-12.columns
        = yield

    = javascript_include_tag 'application'
