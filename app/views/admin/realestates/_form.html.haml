= form_for @realestate do |f|
  - if @realestate.errors.any?
    #error_explanation
      %h2= "#{pluralize(@realestate.errors.count, "error")} prohibited this realestate from being saved:"
      %ul
        - @realestate.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
