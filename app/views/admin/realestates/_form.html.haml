= form_for [:admin, @realestate], html: { multipart: true } do |f|
  - if @realestate.errors.any?
    #error_explanation
      %h2= "#{pluralize(@realestate.errors.count, "error")} prohibited this realestate from being saved:"
      %ul
        - @realestate.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :address
    = f.text_field :address
  - if current_user.admin?
    .field
      = f.label :user
      = f.collection_select(:user, User.where(role: :owner), :id, :email, prompt: true)
  - if @realestate.logo.present?
    .field
      = image_tag @realestate.logo.url(:thumb)
  .field
    = f.label :logo
    = f.file_field :logo
  .actions
    = f.submit t('common.save'), class: :button
