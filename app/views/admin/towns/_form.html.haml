= form_for [:admin, @town] do |f|
  - if @town.errors.any?
    #error_explanation
      %h2= "#{pluralize(@town.errors.count, "error")} prohibited this town from being saved:"
      %ul
        - @town.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :postcode
    = f.text_field :postcode
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save', class: :button
