%p#notice= notice

%p
  %b Ref:
  = @property.ref
%p
  %b Town:
  = @property.town
%p
  %b User:
  = @property.user
%p
  %b Categories:
  = @property.categories.any? ? @property.categories.pluck(:name).join(', ') : 'No categories'
%p
  %b Details:
  = @property.details.any? ? @property.details.pluck(:name).join(', ') : 'No details'

